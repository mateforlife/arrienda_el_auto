<div class="card">
  <h5 class="card-header">Usuarios pendientes (<%= @users.count %>):</h5>
  <div class="card-body">
    <table class="table table-hover"> 
      <tr>
        <th>Usuario</th>
        <th>Documentos pendientes</th>
      </tr>
      <% @users.each do |user| %>     
        <tr>
          <td><%= link_to user.first_name, new_user_legal_document_path(user), class:"card-link-hover list-group-item-action" %></td>
          <td>
          <span class="badge badge-warning offset-md-1"><%=user.legal_documents.count%></span>
          </td>
        </tr>
      <% end%>  
    </table>
  </div>
</div>