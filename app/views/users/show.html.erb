<div class="container col-xl-7 col-lg-10 col-md-6 col-sm-10">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="text-center"><%= I18n.t('user.headers.my_profile') %></h2>
    </div>
    <div class="card-body">    
      <div class="row-fluid">
        <div class="row">
          <h4 class="card-title col-xl-9 col-sm-7 col-14"><%= I18n.t('user.headers.personal_information')%>:</h4><br>
          <div class='container col-xl-3 col-sm-4 col-14' style='text-align: end;'>
            <div class="btn-group">
              <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= I18n.t('buttons.options') %>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to I18n.t('buttons.edit'), '/users/edit', class:"dropdown-item" %>
                <%= link_to I18n.t('buttons.legal_documents'), user_legal_documents_path(@user), class:"dropdown-item" %>
                <%= link_to I18n.t('buttons.driver_account'), new_user_driver_account_path(@user), class:"dropdown-item" %>
              </div>
            </div>
          </div>
        </div><br>
        <div class="table table-responsive">
          <table class="table table-striped table-sm">
            <tbody>
              <tr>
                <th style="width:40%;"><%= I18n.t('user.name')%>:</th>
                <td><%= @user.full_name %></td>
              </tr>
              <tr>
                <th><%= I18n.t('user.birthdate')%>:</th>
                <td><%= @user.birthdate.strftime('%d-%m-%Y')%></td>
              </tr>
              <tr>
                <th><%= I18n.t('user.gender')%>:</th>
                <td><%= User.translated_gender(@user.gender) %></td>
              </tr>
              <tr>
                <th><%= I18n.t('user.rut')%>:</th>
                <td><%= @user.rut%></td>
              </tr>  
              <tr>
                <th><%= I18n.t('user.email')%>:</th>
                <td><%= @user.email%></td>
              </tr>
              <tr>
                <th>Dirección:</th>
                <td><%= @user.full_address%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>  
    </div>
    <h4 class="card-title col-xl-9 col-sm-7 col-14">Información bancaria:</h4>
    <div class="card-body">
      <div class="table table-responsive">
        <table class="table table-striped table-sm">
          <tbody>
            <tr>
              <th>Nombre del titular:</th>
              <td><%= @user.bank_account.name%></td>
            </tr>
            <tr>
              <th>Email:</th>
              <td><%= @user.bank_account.email%></td>
            </tr>
            <tr>
              <th>Rut del titular:</th>
              <td><%= @user.bank_account.rut%></td>
            </tr>
            <tr>
              <th style="width:40%;">Banco:</th>
              <td><%= @user.bank_account.bank.name%></td>
            </tr>
            <tr>
              <th>Tipo de cuenta:</th>
              <td><%= @user.bank_account.account_type%></td>
            </tr>
            <tr>
              <th>Número de cuenta:</th>
              <td><%= @user.bank_account.account_number%></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="text-right">
        <%= link_to I18n.t('buttons.back'), :back %>
      </div>
    </div>
  </div>
</div>