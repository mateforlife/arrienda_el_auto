<div class="container">
  <h2 class= "col-md-5">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="form-group col-md-10 row">
        <%= f.label :nombre, class:"col-md-3 col-form-label" %>
        <%= f.text_field :first_name, autofocus: true, class:"form-control col-md-5", placeholder:"Nombre" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :primer_apellido, class:"col-md-3 col-form-label" %>
        <%= f.text_field :last_name, class:"form-control col-md-5", placeholder:"Primer apellido" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :segundo_apellido, class:"col-md-3 col-form-label" %>
        <%= f.text_field :second_last_name, class:"form-control col-md-5", placeholder:"Segundo apellido" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :sexo, class:"col-md-3 " %>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.text_field :gender, class:"custom-control-input", type:"radio", id:"customRadioInline1"%>
          <%= f.label :masculino, class:" custom-control-label offset-md-1", for:"customRadioInline1" %>          
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.text_field :gender, class:"custom-control-input", type:"radio", id:"customRadioInline2"%>
          <%= f.label :femenino, class:" custom-control-label offset-md-4", for:"customRadioInline2" %>
        </div>
      </div> 

      <div class="form-group col-md-10 row">
        <%= f.label :Fecha_de_nacimiento, class:"col-md-3 col-form-label" %>
        <%= f.date_field :last_name, class:"form-control col-md-5" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :rut, class:"col-md-3 col-form-label" %>
        <%= f.text_field :rut, class:"form-control col-md-5", placeholder:"Rut" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :Numero_de_telefono, class:"col-md-3 col-form-label" %>
        <%= f.text_field :phone_number, class:"form-control col-md-5", placeholder:"Numero de telefono" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :email, class:"col-md-3 col-form-label" %>
        <%= f.email_field :email, autocomplete: "email", class:"form-control col-md-5", placeholder:"Email" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :password, class:"col-md-3 col-form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-md-5", placeholder:"Contraseña(6 caracteres minimo)" %>
      </div>

      <div class="form-group col-md-10 row">
        <%= f.label :password_confirmation, class:"col-md-3 col-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-md-5", placeholder:"Confirmar contraseña" %>
      </div>

      <div class="form-group col-md-5">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block offset-md-2" %>
      </div>

      <div class="col-md-3">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
</div>