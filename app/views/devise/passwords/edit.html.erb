<div class="container col-xl-4 col-lg-6 col-md-5 col-sm-11 col-14">
  <div class="card">
    <div class="card-header">
      <h2><%= I18n.t('devise.passwords.change') %></h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", placeholder:I18n.t('text.password.minimum') %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:I18n.t('text.password.confirmation') %>
        </div>

        <div class="form-group">
          <%= f.submit I18n.t('devise.passwords.new'), class: "btn btn-outline-primary btn-lg btn-block" %>
        </div>
      <% end %>
      <div class="text-right">
        <%= render "devise/shared/links" %>
      </div>
    </div>  
  </div>
</div>
