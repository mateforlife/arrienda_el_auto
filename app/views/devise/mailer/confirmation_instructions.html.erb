<style>
  .container{
    padding-top:2%;
    padding-bottom:3%;
    padding-left:3%;
    padding-right:3%;
    background-color: #E0E6F8;
  }
</style>
<div class="container">
  <div class="card">
    <div class="card-header">
      <h2><%= I18n.t('devise.text.welcome')%> <%= @email %>!</h2>
    </div>
    <div class="card-body">
      <p><%= I18n.t('devise.text.welcome')%> <%= @email %>!</p>

      <p><%= I18n.t('devise.text.messages.confirm_account')%></p>

      <p><%= link_to I18n.t('devise.text.confirm_my_account'), confirmation_url(@resource, confirmation_token: @token) %></p>
    </div>
  </div>
</div>
