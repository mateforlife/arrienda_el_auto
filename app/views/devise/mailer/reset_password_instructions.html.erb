<div class="container col-xl-5 col-lg-10 col-md-6 col-sm-10">
  <div class="card">
    <div class="card-header">
      <h2><%=I18n.t('devise.text.hello')%> <%= @resource.email %>!</h2>
    </div>
    <div class="card-body">

      <p><%= I18n.t('devise.passwords.reset_instructions')%></p>

      <p><%= link_to I18n.t('devise.passwords.change'), edit_password_url(@resource, reset_password_token: @token) %></p>

      <p>
        <%= I18n.t('devise.text.messages.ignore')%>
      </p>
    </div>
  </div>
</div> 