<div class="container col-xl-5 col-lg-10 col-md-6 col-sm-10">
  <div class="card">
    <div class="card-header">
      <h2><%= I18n.t('devise.text.hello')%> <%= @resource.email %>!</h2>
    </div>
    <div class="card-body">

      <p><%= I18n.t('devise.unlocks.unlock_instructions')%></p>

      <p><%= I18n.t('devise.text.messages.click_link')%></p>

      <p><%= link_to I18n.t('devise.unlocks.unlock_my_account'), unlock_url(@resource, unlock_token: @token) %></p>
    </div>
  </div>
</div>
