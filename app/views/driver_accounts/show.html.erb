<div class="container col-xl-6 col-lg-10 col-md-6 col-sm-10">
  <div class="card shadow">  
    <div class="card-header text-center">
      <h2>Driver account</h2>
    </div><br>
    <div class="card-body">
      <h4 class="card-title">Informaci√≥n del conductor:</h4>
      <div class="table table-responsive">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th style="width:40%;"><%= I18n.t('user.name')%>:</th>
              <td><%= @driver_account.user.full_name %></td>
            </tr>
            <tr>
              <th>Estado:</th>
              <td><%= @driver_account.status %></td>
            </tr>
            <tr>
              <th>Fecha de creacion:</th>
