<%= form_for([@reservation.vehicle, @reservation]) do |f| %>
  <%= render 'shared/errors', resource: @reservation %>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date, value: @start_date, min: @start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_field :end_date, value: @end_date, min: @end_date %>
  </div>
  <div class="field">
    <p>Tarifa diaria</p>
    <p id='fee_value'><%= number_to_currency(@vehicle.fee.amount.to_i) %></p>
  </div>
  <div class="field">
    <p>Valor Total</p>
    <p id='final_amount'></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
