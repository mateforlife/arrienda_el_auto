<!DOCTYPE html>
<html>
  <head>
    <title>EasyCar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="container-fuid">
    <body>
      
      <nav class="navbar navbar-expand-lg navbar-dark fixed-top"'>
        <a class="navbar-brand" href="/">EasyCar</a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/brands">Marcas</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= I18n.t('vehicle.headers.index.vehicles') %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to I18n.t('vehicle.publish'), new_vehicle_path, class:"dropdown-item" %>
                <%= link_to I18n.t('vehicle.leasing'), vehicles_path, class:"dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to I18n.t('vehicle.headers.index.my_vehicles'), my_vehicles_path, class:"dropdown-item" %>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Dashboard</a>
            </li>

            <!-- language -->
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= I18n.t('language') %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if I18n.locale == I18n.default_locale %>
                  <%= link_to "Ingles", { locale: :en }, class:"dropdown-item" %>
                <% else %>
                  <%= link_to "Spanish", { locale: :es }, class:"dropdown-item" %>
                <%end%>
              </div>
            </li>
            <!-- -->

            <li class="nav-item">
              <%if user_signed_in?%>
                <%= link_to I18n.t('devise.text.sign_out'), destroy_user_session_path, method: :delete, class:"nav-link", tabindex:"-1", aria_disabled:"true"  %>
              <%else%>
                <%= link_to I18n.t('devise.text.log_in'), new_user_session_path, class:"nav-link", tabindex:"-1", aria_disabled:"true"  %>
              <%end%>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar..." aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
          </form>
        </div>
      </nav>
      <%= yield %>
    </body>  
  </div>
</html>
