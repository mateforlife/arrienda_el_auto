<div class="container col-lg-9 col-md-6 col-sm-10">
  <div class="card">
    <h5 class="card-header"><%= I18n.t('vehicle.headers.legal_document.vehicle_documents')%></h5>
    <div class="card-body">
      <div class="table-responsive ">
        <table class="table table-hover table-sm">
          <tr>
            <th style="width:20%"><%= I18n.t('activerecord.attributes.legal_document.document_type') %>:</th>
            <td>
              <%= LegalDocument.translated_document_type(@legal_document.document_type) %> 
              (<span class="badge badge-pill badge-<%= @legal_document.status_color %>">
                <%= LegalDocument.translated_status(@legal_document.status) %>
              </span>)
            </td> 
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.legal_document.due_date') %>:</th>
            <td><%= @legal_document.due_date %></td>
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.legal_document.document_file')%>:</th>
            <td>
              <% @legal_document.files&.each do |image| %>
                <%= image_tag image, size:"740x460", class:"img-fluid" %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="card">
    <h5 class="card-header"><%= I18n.t('vehicle.headers.legal_document.vehicle_data')%></h5>
    <div class="card-body">
      <h3 class="card-title"></h3>
      <div class="table-responsive">
        <table class="table table-hover table-sm ">
          <tr>
            <th><%= I18n.t('vehicle.brand')%>:</th>
            <td><%= @resource.vehicle_model.brand.name%></td>
          </tr>
          <tr>
            <th><%= I18n.t('vehicle.model')%>:</th>
            <td><%= @resource.vehicle_model.name%></td>
          </tr>
          <tr>
            <th style="width:20%;"><%= I18n.t('activerecord.attributes.vehicle.body_type')%>:</th>
            <td><%= @resource.body_type%></td>
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.vehicle.license_plate')%>:</th>
            <td><%= @resource.license_plate%></td>
          </tr>          
          <tr>
            <th><%= I18n.t('activerecord.attributes.vehicle.engine_type')%></th>
            <td><%= @resource.engine_type%></td>
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.vehicle.year')%>:</th>
            <td><%= @resource.year%></td>
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.vehicle.chasis_number')%>:</th>
            <td><%= @resource.chasis_number%></td>
          </tr>
          <tr>
            <th><%= I18n.t('activerecord.attributes.vehicle.engine_number')%>:</th>
            <td><%= @resource.engine_number%></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="text-right col-md-12">
    <%= link_to I18n.t('buttons.validate'), edit_legal_document_path(@legal_document), class: "btn btn-outline-primary btn-lg btn-block" %><br>
    <%= link_to I18n.t('text.back'), legal_documents_path(@legal_document.resource) %>
  </div>
</div>

