  <div class="card">
    <div class="card-header text-center">
      <h2>Validación de comprobante</h2>
    </div>
    <div class="card-body"> 
      <p>Monto: <%= number_to_currency(@payment.calculated_amount.to_i) %></p>
      <%= render 'form' %><br>
      <div class="text-right">
        <%= link_to 'Detalles', [@payment.reservation, @payment] %><br>
        <%= link_to 'Atrás', reservation_payments_path(@payment.reservation) %>
      </div>
    </div>
  </div>
 </div>
