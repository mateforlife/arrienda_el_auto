<h1>Listing payments</h1>

<table>
  <tr>
    <th>Reservation</th>
    <th>Amount</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.reservation %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.status %></td>
    <td><%= link_to 'Show', [payment.reservation, payment] %></td>
    <td><%= link_to 'Edit', edit_reservation_payment_path(payment.reservation, payment) %></td>
    <td><%= link_to 'Destroy', [payment.reservation, payment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

